<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_library"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titel_library"
        android:layout_toRightOf="@id/image_library"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        tools:text="nom llista"
        android:layout_marginStart="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/subtitel_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titel_library"
        android:layout_toEndOf="@+id/image_library"
        android:layout_toRightOf="@+id/image_library"
        android:textColor="@color/primaryLigth2"
        android:layout_marginLeft="10dp"
        tools:text="name creator"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follow_button"
        android:text="FOLLOW"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_alignParentEnd="true" />
</RelativeLayout>